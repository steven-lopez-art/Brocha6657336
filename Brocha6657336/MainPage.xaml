<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:Brocha6657336.ViewModels"
             x:Class="Brocha6657336.MainPage">

    <ContentPage.BindingContext>
        <viewmodels:MainViewModels/>
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">

            <Entry Text="{Binding Metrosc}" Margin="5"/>

            <Button Text="Sumar" x:Name="BtnSum" Margin="5" Command="{Binding CalcularCommand}"/>

            <Entry Text="{Binding Costo}" Margin="5"/>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
